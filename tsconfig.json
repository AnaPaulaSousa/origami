{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "dom"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "lib",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types/node"
    ]
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
